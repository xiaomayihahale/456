.ss-scroll-navbar {
    width: 100%;
    height: 80rpx;
    white-space: nowrap;
}

.ss-scroll-navbar .nav-item {
    height: 80rpx;
    text-align: center;
    padding: 0rpx 50rpx;
    color: #000;
    display: inline-block;
    position: relative;
    font-size: 28rpx;
}

.ss-scroll-navbar .nav-item .title {
    line-height: 90rpx;
}

.ss-scroll-navbar .nav-item:after {
    content: "";
    width: 0;
    height: 0;
    border-bottom: 6rpx solid #ff6145;
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    transition: .3s;
}

.ss-scroll-navbar .active-color {
    color: #ff6145;
    font-size: 28rpx;
}

.ss-scroll-navbar .active-color:after {
    width: 50%;
}