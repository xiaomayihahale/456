<view>
    <view class="uni-numbox">
        <view catchtap="__e" class="{{['uni-numbox__minus',inputValue<=min||disabled?'uni-numbox--disabled':'']}}" data-event-opts="{{[ [ 'tap',[ [ '_calcValue',['minus'] ] ] ] ]}}">-</view>
        <input bindblur="__e" class="uni-numbox__value" data-event-opts="{{[ [ 'blur',[ [ '_onBlur',['$event'] ] ] ] ]}}" disabled="{{true}}" type="number" value="{{inputValue}}"></input>
        <view catchtap="__e" class="{{['uni-numbox__plus',inputValue>=max||disabled?'uni-numbox--disabled':'']}}" data-event-opts="{{[ [ 'tap',[ [ '_calcValue',['plus'] ] ] ] ]}}">+</view>
    </view>
</view>
