.line-detail {
    width: 100%;
    height: 4rpx;
    background-color: #e60200;
}

.First_team {
    color: #e60200;
    margin: 20rpx;
}

.Second_team {
    color: #757575;
}

.top {
    border-top: 2rpx solid #f7f7f7;
}

.top view {
    width: calc(100% / 3);
    font-size: 24rpx;
    color: #a1a1a1;
    text-align: center;
    margin: 20rpx 0rpx;
}

.user {
    border-top: 2rpx solid #f7f7f7;
}

.user view {
    width: calc(100% / 3);
    text-align: center;
    margin: 5px 0rpx;
}

.promotion_img {
    width: 70rpx;
    height: 70rpx;
    margin-right: 10rpx;
}

.promotion_view {
    font-size: 30rpx;
    color: #5f5d5d;
    font-weight: 700;
}