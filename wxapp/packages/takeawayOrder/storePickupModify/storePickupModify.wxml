<view>
    <view class="flex-column" style="width:750rpx;">
        <view class="flex-columns" style="margin-top:136rpx;">
            <view class="zhangh">电话</view>
            <view class="uni-zhanghao">
                <input bindinput="__e" class="box-input" data-event-opts="{{[ [ 'input',[ [ '__set_model',[ '','phone','$event',[] ] ] ] ] ]}}" maxlength="11" placeholder="请输入您的电话" value="{{phone}}"></input>
            </view>
        </view>
        <view class="flex-columns">
            <view class="zhangh">人数</view>
            <view class="uni-zhanghao">
                <input bindinput="__e" class="box-input" data-event-opts="{{[ [ 'input',[ [ '__set_model',[ '','people','$event',[] ] ] ] ] ]}}" maxlength="8" placeholder="请输入用餐人数" type="number" value="{{people}}"></input>
            </view>
        </view>
    </view>
    <view bindtap="__e" class="flex" data-event-opts="{{[ [ 'tap',[ ['confirm'] ] ] ]}}" style="width:750rpx;position:absolute;bottom:200rpx;">
        <view class="btn flex">确认修改</view>
    </view>
</view>
