page {
    background: #f0f0f0;
}

.line-detail {
    width: 100%;
    height: 4rpx;
    background-color: #e60200;
}

.First_team {
    color: #e60200;
    margin: 20rpx;
}

.Second_team {
    color: #757575;
}

.top {
    border-top: 2rpx solid #f7f7f7;
}

.top view {
    width: calc(100% / 3);
    font-size: 24rpx;
    color: #a1a1a1;
    text-align: center;
    margin: 20rpx 0rpx;
}

.team {
    width: 750rpx;
    padding: 100rpx 0rpx;
    background-color: #fff;
    z-index: 99;
}

.text {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: grey;
}

.user {
    border-top: 2rpx solid #f7f7f7;
    background-color: #fff;
}

.promotion_img {
    width: 84rpx;
    height: 84rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.promotion_view {
    font-size: 30rpx;
    color: #5f5d5d;
    font-weight: 700;
}